<section class="button-holder z-0 relative dark:bg-dark-item shadow-lg shadow-shadow rounded-lg border-4 border-brand dark:border-brand-dark p-2 w-44 h-44" {{on "drop" (fn @handleDrop @collection)}} {{on "dragover" @preventDefault}}>
    <calcite-fab class="z-20 close-button absolute top-2 right-2" icon='trash' color="red" scale="l" appearance="outline" {{action (fn @removeCollection @collection) bubbles='false'}}></calcite-fab>
    <LinkTo @route="collection" @model="{{@collection}}" class="flex flex-col justify-center items-center w-full h-full">
        <calcite-icon icon="inbox" scale="l" class="h-16 w-16 mb-2"></calcite-icon>
        <h3 class="text-xl">{{titleCase @collection}}</h3>
    </LinkTo>
</section>